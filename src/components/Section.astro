---
interface Props {
  title: string;
  id?: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="reveal text-base/relaxed px-6 sm:px-6 md:px-0 my-8 md:my-15"
>
  <h2 class="font-heading text-2xl md:text-3xl font-bold mb-3 md:mb-6">
    <span class="text-highlight">&#123; </span>
      {title}
    <span class="text-highlight"> &#125;</span>
  </h2>
  <div class="space-y-4">
    <slot />
  </div>
</section>
