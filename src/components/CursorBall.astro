<div class="cursor-ball hidden md:block" />

<script is:inline>
  const handleMouseMove = (event) => {
    const cursorBall = document.querySelector('.cursor-ball');
    if (cursorBall) {
      cursorBall.style.transform = `translate(${event.clientX}px, ${event.clientY}px)`;
    }
  };

  const initCursorBall = () => {
    window.removeEventListener('mousemove', handleMouseMove);

    if (window.innerWidth >= 768) window.addEventListener('mousemove', handleMouseMove);
  };

  document.addEventListener('astro:page-load', initCursorBall);
</script>
