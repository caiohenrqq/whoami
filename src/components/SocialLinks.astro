---
import { FaEnvelope, FaGithub, FaLinkedin, FaWhatsapp } from "react-icons/fa";

const socialLinks = [
	{
		href: "https://github.com/caiohenrqq",
		label: "GitHub",
		icon: FaGithub,
	},
	{
		href: "https://linkedin.com/in/caiohenrqq",
		label: "LinkedIn",
		icon: FaLinkedin,
	},
	{
		href: "https://drive.google.com/file/d/10QEFlc6tLVQn_uRYGtOsUagD4m1INESM/view",
		label: "CV",
		icon: "CV",
	},
	{
		href: "https://wa.me/5569992974079",
		label: "WhatsApp",
		icon: FaWhatsapp,
	},
	{
		href: "mailto:caiohenrqq.profissional@gmail.com",
		label: "Email",
		icon: FaEnvelope,
	},
];
---

<div class="flex items-center space-x-4 mt-5">
  {
    socialLinks.map(({ href, label, icon: Icon }) => (
      <a
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        class="text-text/70 hover:text-accent transition-colors"
        aria-label={label}
      >
        {typeof Icon === "string" ? (
          <span class="font-bold text-lg">{Icon}</span>
        ) : (
          <Icon size={24} className="mx-1 my-2" />
        )}
      </a>
    ))
  }
</div>
