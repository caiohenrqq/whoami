---
import About from "@components/About.astro";
import Contact from "@components/Contact.astro";
import ExperienceItem from "@components/ExperienceItem.astro";
import ProjectCard from "@components/ProjectCard.astro";
import Section from "@components/Section.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Caio H.">
  <main class="container">
    <Section title="/about">
      <About />
    </Section>

    <Section id="experience" title="/experience">
      <ExperienceItem
        title="Full Stack Developer"
        company="Unlockar"
        start="January 2026"
        end="Present"
        location="Remote"
        description="High-performance vehicle intelligence SaaS engineered for real-time data aggregation, normalization, and SEO optimization."
        responsibilities={[
          "Slashed data retrieval latency by 96% (2.5s to 80ms) and operational costs by 60% by architecting a Redis caching layer and implementing hash-based MongoDB report reuse.",
          "Optimized infrastructure scalability and reduced hosting overhead by designing a decoupled microservices architecture with Next.js and Node.js, containerized via Docker and orchestrated with Nginx.",
          "Secured 100% transaction consistency for digital product delivery by engineering an idempotent payment flow using Stripe asynchronous webhooks and atomic database operations.",
        ]}
        technologies={[
          "Next.js",
          "Node.js",
          "TypeScript",
          "Redis",
          "MongoDB",
          "Docker",
          "Nginx",
          "Stripe",
          "Zod",
          "Zustand",
          "Linux (Debian)",
        ]}
      />

      <div class="border" />

      <ExperienceItem
        title="Full Stack Developer"
        company="BuscaSim"
        start="February 2025"
        end="January 2026"
        location="Remote"
        description="High-traffic vehicle lookup platform (500k+ daily users) that delivers detailed automotive information instantly."
        responsibilities={[
          "Refactored the external provider integration layer using the Strategy Pattern, reducing new API onboarding time from 8 to 2 days and saving R$7,000/month by eliminating duplicate requests.",
          "Built an A/B testing ecosystem with Laravel and React in a high-traffic environment, integrating GA4 and GTM to eliminate over 90% of the marketing team's manual tests.",
          "Developed 8 high-performance dashboards using TanStack Table and Query, achieving consistent load times under 1 second for high-volume data visualization.",
          "Designed reusable UI components with Mantine and controlled complex form validations using Yup.",
        ]}
        technologies={[
          "React",
          "Laravel",
          "TypeScript",
          "PHP",
          "MySQL",
          "TanStack Query",
          "TanStack Table",
          "Mantine",
          "Docker",
          "Google Tag Manager",
          "Google Cloud Platform",
        ]}
      />

      <div class="border" />

      <ExperienceItem
        title="Software Developer & IT Technician"
        company="Prefeitura Municipal de Ji-Paraná"
        start="February 2023"
        end="January 2025"
        location="Rondônia, Brazil"
        description="Internal IT team responsible for resolving technical issues across municipal departments."
        responsibilities={[
          "Led the development of a computer ID management system that replaced a manual process, improving workflow efficiency by 65% and reducing onboarding time.",
          "Migrated the database from AWS RDS to Hostinger with phpMyAdmin, centralizing infrastructure and simplifying maintenance.",
          "Set up CI/CD pipelines with GitHub Actions to deploy updates via FTP, making deployments faster and more reliable.",
          "Built a cross-platform Python tool with a GUI to automate IT tasks like batch processing and printer spooler resets, reducing technician errors and improving productivity by 30%.",
        ]}
        technologies={[
          "PHP",
          "MySQL",
          "JavaScript",
          "Python",
          "Hostinger",
          "GitHub Actions",
          "Tkinter",
        ]}
      />
    </Section>

    <div class="border" />

    <div class="min-h-screen">
      <Section id="projects" title="/projects">
        <ProjectCard
          title="Portfolio"
          start="August 2025"
          end="Present"
          description="My personal portfolio website, showcasing my skills, projects, and experiences as a software developer, built with <3."
          technologies={[
            "React",
            "TypeScript/JavaScript",
            "Vercel",
            "Astro",
            "react-icons",
            "GSAP",
            "Lenis",
            "Git",
            "Tailwind CSS",
          ]}
          repository="https://github.com/caiohenrqq/whoami"
          website="/"
          sample={[
            "/projects/AcademicHub/sample-academichub-1.gif",
            "/projects/AcademicHub/sample-academichub-2.gif",
          ]}
        />
        <ProjectCard
          title="AcademicHub"
          start="October 2024"
          end="December 2024"
          description="Real-time chat app for university communities, allowing students to create topics, send messages, and interact in discussions"
          technologies={[
            "React",
            "Ionic",
            "Firebase",
            "TypeScript/JavaScript",
            "Vercel",
            "Firestore",
            "NoSQL",
            "Git",
          ]}
          repository="https://github.com/caiohenrqq/AcademicHub"
          website="https://academichub-eight.vercel.app"
          sample={[
            "/projects/AcademicHub/sample-academichub-1.gif",
            "/projects/AcademicHub/sample-academichub-2.gif",
          ]}
        />
      </Section>

      <div class="border" />

      <Section id="contact" title="/contact">
        <Contact />
      </Section>
    </div>
  </main>
</Layout>
